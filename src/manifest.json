{
    "name": "XAML",
    "description": "Generates UWP XAML resources from colors and text styles.",
    "version": "0.1.0",
    "author": {
        "name": "nventive",
        "email": "info@nventive.com",
        "url": "http://nventive.com"
    },
    "repository": "https://github.com/nventive/zeplin-extension-xaml",
    "moduleURL": "./main.js",
    "options": [
        {
            "name": "Sort resources",
            "type": "switch",
            "id": "sortResources",
            "default": true
        },
        {
            "name": "Filter colors (regex)",
            "type": "text",
            "id": "colorsFilter",
            "default": ""
        },
        {
            "name": "Filter text styles (regex)",
            "type": "text",
            "id": "textStylesFilter",
            "default": ""
        },
        {
            "name": "Default FontFamily",
            "type": "text",
            "id": "defaultFontFamily",
            "default": ""
        },
        {
            "name": "TextAlignment",
            "type": "picker",
            "id": "textAlignmentMode",
            "default": "textBlock",
            "options": [
                {
                    "name": "TextBlock",
                    "value": "textBlock"
                },
                {
                    "name": "Style",
                    "value": "style"
                }
            ]
        },
        {
            "name": "Ignore CharacterSpacing",
            "type": "switch",
            "id": "ignoreCharacterSpacing",
            "default": false
        },
        {
            "name": "Ignore LineHeight",
            "type": "switch",
            "id": "ignoreLineHeight",
            "default": false
        }
    ]
}